---
import Link from "@components/Link.astro";
import ChevronLeft from "@icons/ChevronLeft.astro";
import Layout from "@layouts/Layout.astro";

const navigation = [
  { name: 'Home', href: '/', command: 'cd ~ /' },
	{ name: 'Projects', href: '/projects', command: 'cd ~ / projects' },
	{ name: 'Experience', href: '/experience', command: 'cd ~ / experience' },
	{ name: 'Tech Stack', href: '/tech-stack', command: 'cd ~ / tech-stack' },
];
---

<Layout title="Shlok Desai | Menu">
  <div class="flex justify-center max-w-7xl gap-x-16 mx-auto px-4">
    <div class="w-40 hidden xl:block"></div>

		<div id="main" class="space-y-8 max-w-2xl w-full">
			<div class="flex flex-col gap-y-8">
        <h1 class="text-gray12 tracking-wider">Menu</h1>
        {
          navigation.map((link) => (
            <Link href={link.href} variant="secondary">
              <ChevronLeft size={16} />
              {link.command}
            </Link>
          ))
        }
      </div>
		</div>

		<div class="w-40 hidden xl:block"></div>
	</div>
</Layout>