---
import ArrowUpRight from "@icons/ArrowUpRight.astro";
import Link from "@components/Link.astro";
import Alert from "@icons/Alert.astro";
import ChevronLeft from "@icons/ChevronLeft.astro";
import Layout from "@layouts/Layout.astro";
import P from "@components/P.astro";
---

<Layout title="Shlok Desai | SWE Intern @ Pyebook">
  <div class="flex justify-center max-w-7xl gap-x-16 mx-auto px-4">
    <div class="w-40 hidden xl:block">
      <button
        onclick="history.back();"
        class="inline-flex items-center gap-x-1 border-b border-gray9
              hover:border-gray11 hover:text-gray12 transition-colors w-fit
              tracking-wide font-light text-gray12 text-base"
      >
        <ChevronLeft size={16} />
         cd . .
      </button>
    </div>

    <div id="main" class="max-w-2xl w-full">
      <div class="flex items-center justify-between">
        <h1 class="text-gray12 tracking-wider">
          Instrumus{" "}
          <Link
            href="https://instrumus.com"
            variant="secondary"
            className="ml-2"
          >
            instrumus.com
            <ArrowUpRight size={16} />
          </Link>
        </h1>

        <button
          onclick="history.back();"
          class="inline-flex items-center gap-x-1 border-b border-gray9
              hover:border-gray11 hover:text-gray12 transition-colors w-fit
              tracking-wide font-light text-gray12 text-base xl:hidden"
        >
          <ChevronLeft size={16} />
           cd . .
        </button>
      </div>

      <span class="text-gray11 font-light text-sm mt-4 block">
        Ideation: Mumbai, India â€¢ 06/2022 - Present
      </span>

      <P className="mt-8">
        Instrumus is a platform I built for researchers & students in India who
        are in need of scientific equipment or instrumentation services. It was
        co-created with one of my closest friends - Arjun Kohli.
      </P>

      <P className="mt-6 border-y border-gray6 py-3 inline-flex items-center gap-x-4">
        <Alert size={56} />
        Due to legal reasons, the source code or implementation details of this
        project are no longer publicly available. Please reach out to me for any
        inquiries.
      </P>
    </div>

    <div class="w-40 hidden xl:block"></div>
  </div>
</Layout>
